<h1 align="center">All Bloggers</h1>
<div align="center">
    <% @users.each do |user| %>
        <ul class='listing'>
            <div class='row justify-content-center'>
                <div class="card bg-light mb-3" style="min-width: 18rem;">
                    <div class="card-header "><%= link_to gravatar_for(user), user_path(user) %></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to user.username, user_path(user) %></h5>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer"><%= pluralize(user.posts.count, "post") if user.posts %></div>
                </div>
            </div>
        </ul>
    <% end %>
</div>