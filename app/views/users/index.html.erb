<h1 align="center">All Bloggers</h1>
<div align="center">
    <%= render 'shared/pagination', obj: @users %>
    <% @users.each do |user| %>
        <ul class='listing'>
            <div class='row justify-content-center'>
                <div class="card bg-light mb-3" style="min-width: 18rem;">
                    <div class="card-header "><%= link_to gravatar_for(user), user_path(user) %></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to user.username, user_path(user) %></h5>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer"><%= pluralize(user.posts.count, "post") if user.posts %></div>
                    <% if logged_in? and current_user.admin? %>
                        <%= link_to 'Delete this user', user_path(user), method: :delete,
                        data: { confirm: "Are your sure you want to delete user and all his posts?" } %>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    <%= render 'shared/pagination', obj: @users %>
</div>