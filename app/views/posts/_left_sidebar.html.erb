
<!-- Search Widget -->
            <div class="card my-4">
                <form action="" method="get"></form>
                <h5 class="card-header">Search</h5>
                <%= form_tag "#", method: :get, id: "stock-lookup-form" do %>
                    <div class="card-body">
                        <div class="input-group">
                            <%= text_field_tag :search, params[:search],
                            placeholder: 'Search ... ', type: :search, class: "form-control search-box input-lg" %>
                            <span class="input-group-btn">
                            <%# fa_icon 'fa fa-search' %>
                            <button class="btn btn-secondary ml-1" type="button"><i class="fa fa-search"></i> Go!</button>
                            </span>
                        </div>
                    </div>
                <% end %>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <% @categories.each do |category| %>
                        <div class="row ">
                            <div class="col-lg-2">
                            </div>
                            <div class="col-lg-8">
                                <p class="badge d-flex"><small><%= link_to "#{category.name}", category_path(category) %></small></p>
                            </div>
                            <div class="col-lg-2">
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                </div>
            </div>