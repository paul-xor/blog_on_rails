<div class='row justify-content-between'>
<% obj.each do |post| %>
    
    <div class='col-lg-4 col-sm-6 mb-3'>
        <div class='card border-primary mb-3" style="max-width: 20rem;'>
            <div class="card-header">
                <%= link_to post.title, post_path(post), class: "card-link color#black" %>
            </div>
            <div class='card-body '>
                <p class='card-text '>
                    <%# truncate(post.body.html_safe, length: 150) %>
                    <%# truncate_html(post.body, 150) %>
                    <%# truncate(post.body, lenght: 150, escape: false) %>
                    <%= post.body.truncate(150) %>
                    <%= image_tag @post.image.url(:thumb), class: "img-show" if @post.image? %>
                    
                    <div class='post-meta-details'>
                        <small>Created by: <strong><%= post.user.username if post.user%></strong> ,
                                <%= time_ago_in_words(post.created_at) %> ago, <br>
                                Last updated: <%= time_ago_in_words(post.updated_at) %> ago
                        </small>
                    </div>
                </p>
                <% if post.categories.any?  %>
                    <p class="badge badge-pill badge-primary">Categories: <%= render post.categories %></p>
                <% end %>
                <% if logged_in? && (current_user == post.user || current_user.admin?) %>
                    <div class='post-actions'>
                        <%= link_to 'Edit post', edit_post_path(post), class: 'btn btn-sm btn-primary' %> 
                        <%= link_to 'Delete post', post_path(post), method: :delete, 
                            data: {confirm: 'You are about to delete this post, are you sure?'},
                            class: "btn btn-sm btn-danger" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>
</div>