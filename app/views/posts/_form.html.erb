
<%= render 'shared/errors', obj: @post %>

<div class="row">
    <div class=col-sm-12 >
        <%= form_for @post do |f| %>
            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :title, class: 'form-control', placeholder: 'Post title', autofocus: true %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    <%= f.label :body %>
                </div>
                <div class="col-sm-10">
                        <%= f.text_area :body, cols: 50, rows: 15, class: "form-control", placeholder: "Body of post"%>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    
                </div>
                <div class="position-relative col-sm-10 mt-3">
                    <%= f.submit class:'btn btn-outline-success btn-sm' %>
                </div>
            </div>
        <% end %>
        
        <div align="center">
            [<%= link_to 'Cancel request and return to posts listing', posts_path %>]
        </div>
        
    </div>
</div>