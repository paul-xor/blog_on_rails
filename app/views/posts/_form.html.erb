<% if @post.errors.any? %>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
        <% end %>
    </ul>
<% end %>
  

<%= form_for @post do |f| %>
    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %> <br>
        <%= f.text_area :body, cols: 50, rows: 5%>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Back to posts', posts_path %>