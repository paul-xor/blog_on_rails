<h1 align='center'>Listing All Categories</h1>
<%= render 'shared/pagination', obj: @categories %>
<div align="center">
    <% @categories.each do |category| %>
        <ul class='listing'>
            <div class='row justify-content-center'>
                    <div class="card border-primary mb-3" style="min-width: 18rem;">
                        
                        <div class="card-body">
                            <h5 class="card-title"></h5>
                            <p class="card-text"><%= link_to "#{category.name}", category_path(category) %></p>
                            <small><%= pluralize(category.posts.count, "post") %></small>
                        </div>
                        
                    </div>
            </div>
        </ul>
    <% end %>
</div>
<%= render 'shared/pagination', obj: @categories %>
