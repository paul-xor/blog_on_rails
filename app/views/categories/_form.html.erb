<%= render 'shared/errors', obj: @category %>


<%= form_for @category do |f| %>
    <div class="form-group row">
        <div class="col-form-label col-sm-2">
            <%= f.label :name %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Category name', autofocus: true %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-form-label col-sm-2">
        </div>
        <div class="position-relative col-sm-10 mt-1">
            <%= f.submit class:'btn btn-outline-success btn-sm' %>
        </div>
    </div>

<% end %>

<div align="center">
    [<%= link_to 'Cancel request and return to posts listing', posts_path %>]
</div>